@model HotelMVC.Models.Room

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var hotelId = ViewBag.HotelId;
}

<h1>Add Room</h1>

<hr />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 col-sm-8">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Roomprice" class="control-label"></label>
                            <input asp-for="Roomprice" class="form-control" />
                            <span asp-validation-for="Roomprice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Roomcapacity" class="control-label"></label>
                            <input asp-for="Roomcapacity" class="form-control" />
                            <span asp-validation-for="Roomcapacity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Roomdescription" class="control-label"></label>
                            <textarea rows="5" cols="40" asp-for="Roomdescription" class="form-control"></textarea>
                            <span asp-validation-for="Roomdescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageFile" class="control-label"></label>
                            <input asp-for="ImageFile" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                        @*<div class="form-group">
                        <label asp-for="Availabilitystatus" class="control-label"></label>
                        <input asp-for="Availabilitystatus" class="form-control" />
                        <span asp-validation-for="Availabilitystatus" class="text-danger"></span>
                        </div>*@
                        <div class="form-group">
                            <label asp-for="Hotelid" class="control-label"></label>
                            <select asp-for="Hotelid" class="form-control" asp-items="ViewBag.Hotelid"></select>
                        </div>



                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </div>
    </div>
</div>