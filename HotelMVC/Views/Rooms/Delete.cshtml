@model HotelMVC.Models.Room

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Room?</h3>
<div>
    <hr />
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Roomprice)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Roomprice)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Roomcapacity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Roomcapacity)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Roomdescription)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Roomdescription)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Availabilitystatus)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Availabilitystatus)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotel)
                    </dt>
                    <dd class="col-sm-10">
                        <img src=@Url.Content("~/Images/" + Model.Roomimage) asp-append-version="true"
                             style="border-radius:20%;" width="100" height="100" />
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Roomid" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @*<a asp-action="Index">Back to List</a>*@
                    @if (ViewBag.UserId == 1) //admin
                    {
                        <a asp-controller="Admin" asp-action="GetRoomsByHotelIdAdmin" asp-route-id="@Model.Hotelid">Back to List</a>
                    }
                    else
                    {
                        <a asp-controller="Admin" asp-action="GetRoomsByHotelId" asp-route-id="@Model.Hotelid">Back to List</a>
                    }
                </form>
            </div>
        </div>
    </div>
</div>