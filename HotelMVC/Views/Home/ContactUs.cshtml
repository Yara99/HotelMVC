@model HotelMVC.Models.Contactus

@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<head>
    <style>
        .contact-left-block > p i {
            background: #ff4157 none repeat scroll 0 0;
            border-radius: 50%;
            color: #fff;
            height: 40px;
            line-height: 40px;
            text-align: center;
            width: 40px;
            font-size: 20px;
            margin-right: 15px;
        }
    </style>
</head>

<section class="resort-overview-block">
    <div class="container">
        <div class="row">
            <h1 style="text-align: center; margin-bottom: 70px; font-family: 'exotc350_dmbd_btdemi-bold'; font-size: 50px;">
                Contact Us
            </h1>
           <section class="contact-block" style="padding-top: 40px;">
                <div class="container">
                    <div class="col-md-6 contact-left-block">
                        <p ><i class="fa fa-map-marker fa-lg"></i> @Model.Contactaddress. </p>
                        <p ><i class="fa fa-phone fa-lg"></i> @Model.Contactphone </p>
                        <p ><i class="fa fa-envelope"></i> <a href="mailto:@Model.Contactemail"> @Model.Contactemail</a></p>
                    </div>
                    <div class="col-md-6 contact-form" >
                        <h3 style="font-family: 'exotc350_dmbd_btdemi-bold'; font-size: 30px;">Send a <span>Message</span></h3>
                        <form action="#" method="post">
                            <input type="text" class="form-control" name="Name" placeholder="Name" required="">
                            <input type="email" class="form-control" name="Email" placeholder="Email" required="">
                            <textarea class="form-control" name="Message" placeholder="Message Here...." required=""></textarea>
                            <input type="submit" class="submit-btn" value="Submit">
                        </form>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </section>
        </div>

    </div>
</section>


