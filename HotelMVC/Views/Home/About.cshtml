@model HotelMVC.Models.About

@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="text-center">
                <h1 style="text-align: center; margin-bottom: 70px; font-family: 'exotc350_dmbd_btdemi-bold'; font-size: 50px;">
                About Us
                </h1>
            </div>
        </div>
    </div>
</div>
 <section class="about-block">
                <div class="container">
                    <div class="row" style="display: flex; align-items: center;">
                        <div class="col-md-5 about-left">
                            <div class="event-blog-image">
                                    <img alt="image" class="img-responsive" src=@Url.Content("~/Images/"+Model.Aboutimage) asp-append-version ="true">
                             </div>
                            @*<p>Lorem <label>ipsum</label> dol  <span>-sitamet</span></p>*@
                        </div>
                        <div class="col-md-7 about-right">
                            <h3>@Model.Abouttitle</h3>
                            <p>@Model.Aboutcontent</p>
                            
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
 </section>

