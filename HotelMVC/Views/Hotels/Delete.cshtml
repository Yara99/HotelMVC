@model HotelMVC.Models.Hotel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Hotel?</h3>
<div>

    <hr />
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotelname)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hotelname)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hoteladdress)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hoteladdress)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotelphone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hotelphone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotelemail)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hotelemail)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hoteldescription)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hoteldescription)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotelimage)
                    </dt>
                    <dd class="col-sm-10">
                        <img src=@Url.Content("~/Images/" + Model.Hotelimage) asp-append-version="true"
                             style="border-radius:20%;" width="100" height="100" />
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Hotelid" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>