@model HotelMVC.Models.Hotel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>
    <hr />
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotelname)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hotelname)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hoteladdress)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hoteladdress)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotelphone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hotelphone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotelemail)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hotelemail)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hoteldescription)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hoteldescription)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hotelimage)
                    </dt>
                    <dd class="col-sm-10">
                        <img src=@Url.Content("~/Images/" + Model.Hotelimage) asp-append-version="true"
                             style="border-radius:20%;" width="100" height="100" />
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Hotelid">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>