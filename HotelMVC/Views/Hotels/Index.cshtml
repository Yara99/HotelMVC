@model IEnumerable<HotelMVC.Models.Hotel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Hotels</h1>

<p>
    <a class="btn btn-success " asp-action="Create">Create New</a>
</p>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                           Hotel Name
                        </th>
                        <th>
                            Hotel Address
                        </th>
                        <th>
                            Hotel Phone
                        </th>
                        <th>
                            Hotel Email
                        </th>
                        <th>
                            Hotel Description
                        </th>
                        <th>
                            Hotel Image
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td style="white-space: initial;">
                            @Html.DisplayFor(modelItem => item.Hotelname)
                        </td>
                        <td style="white-space: initial;">
                            @Html.DisplayFor(modelItem => item.Hoteladdress)
                        </td style="white-space: initial;">
                        <td>
                            @Html.DisplayFor(modelItem => item.Hotelphone)
                        </td>
                        <td style="white-space: initial;">
                            @Html.DisplayFor(modelItem => item.Hotelemail)
                        </td>
                        <td style="white-space: initial;">
                            @Html.DisplayFor(modelItem => item.Hoteldescription)
                        </td>
                        <td style="white-space: initial;">
                            <img src=@Url.Content("~/Images/" + item.Hotelimage) asp-append-version ="true"
                            style="border-radius:20%; width:200px !important; height:200px !important;"/>
                        </td>
                        <td style="white-space: initial;">
                            <a asp-action="Edit" asp-route-id="@item.Hotelid">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Hotelid">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Hotelid">Delete</a>
                        </td>
                        <td><div class="links"><a class="btn btn-info btn-lg" asp-controller="Admin" asp-action="GetRoomsByHotelIdAdmin" asp-route-id="@item.Hotelid">Rooms</a></div></td>
                    </tr>
            }
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
