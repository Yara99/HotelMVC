@model IEnumerable<HotelMVC.Models.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Checkindate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Checkoutdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Totalprice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Checkindate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Checkoutdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Totalprice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Roomdescription)
            </td>
            <td>
                @item.User.Userfname @item.User.Userlname
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Reservationid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Reservationid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Reservationid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
