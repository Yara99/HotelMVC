@model HotelMVC.Models.About

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>

    <hr />
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Abouttitle)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Abouttitle)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Aboutcontent)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Aboutcontent)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Aboutimage)
                    </dt>
                    <dd class="col-sm-10">
                        <img src=@Url.Content("~/Images/" + Model.Aboutimage) asp-append-version="true"
                             style="border-radius:20%;" width="100" height="100" />
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
