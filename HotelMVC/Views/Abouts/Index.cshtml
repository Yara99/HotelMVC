@model IEnumerable<HotelMVC.Models.About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success ">Create New</a>
</p>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Abouttitle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Aboutcontent)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Aboutimage)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="white-space: initial;">
                                    @Html.DisplayFor(modelItem => item.Abouttitle)
                                </td>
                                <td style="white-space: initial;">
                                    @Html.DisplayFor(modelItem => item.Aboutcontent)
                                </td>
                                <td>
                                    <img src=@Url.Content("~/Images/" + item.Aboutimage) asp-append-version="true"
                                     style="border-radius:20%;width:200px !important; height:200px !important; " />
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>