@model IEnumerable<HotelMVC.Models.Room>
@{
    ViewData["Title"] = "GetRoomsByHotelIdAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h1>Rooms</h1>

<p>
    <a class="btn btn-success " asp-controller="Rooms" asp-route-id="hotelId" asp-action="Create">Create New</a>
</p>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Room Price
                            </th>
                            <th>
                                Room Capacity
                            </th>
                            <th>
                                Room Description
                            </th>
                            <th>
                                Availability Status
                            </th>
                            <th>
                                Hotel Name
                            </th>
                            <th>
                                Room Image
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="white-space: initial;">
                                    @Html.DisplayFor(modelItem => item.Roomprice)
                                </td>
                                <td style="white-space: initial;">
                                    @Html.DisplayFor(modelItem => item.Roomcapacity)
                                </td>
                                <td style="white-space: initial;">
                                    @Html.DisplayFor(modelItem => item.Roomdescription)
                                </td>
                                <td style="white-space: initial;">
                                    @Html.DisplayFor(modelItem => item.Availabilitystatus)
                                </td>
                                <td style="white-space: initial;">
                                    @Html.DisplayFor(modelItem => item.Hotel.Hotelname)
                                </td>
                                <td style="white-space: initial;">
                                    <img src=@Url.Content("~/Images/" + item.Roomimage) asp-append-version="true"
                                     style="border-radius:20%; width:200px !important; height:200px !important;" />
                                </td>
                                <td style="white-space: initial;">
                                    <a asp-controller="Rooms" asp-action="Edit" asp-route-id="@item.Roomid">Edit</a> |
                                    <a asp-controller="Rooms" asp-action="Details" asp-route-id="@item.Roomid">Details</a> |
                                    <a asp-controller="Rooms" asp-action="Delete" asp-route-id="@item.Roomid">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>
